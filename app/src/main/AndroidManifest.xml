<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hanyang.ac.kr.belieme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_heart_b_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_heart_b_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.AppInfoActivity"></activity>
        <activity android:name=".activity.AdminManageActivity" />
        <activity android:name=".activity.DetailHistoryActivity" />
        <activity android:name=".activity.DetailItemActivity" />
        <activity android:name=".activity.UserInfoActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.AddItemActivity" />
        <activity
            android:name=".activity.EditItemActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />

        <receiver android:name=".broadcastReceiver.AlarmReceiver">
            <intent-filter>
                <action android:name="alarm" />
            </intent-filter>
        </receiver>
    </application>

</manifest>